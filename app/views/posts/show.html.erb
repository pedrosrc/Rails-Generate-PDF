<div class="mx-auto w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @post %>

    <%= link_to "Back to posts", posts_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium hover:bg-blue-500" %>
    <%= link_to "Edit this post", edit_post_path(@post), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium hover:bg-blue-500" %>
    <%= link_to "Preview and Download", download_post_path(@post, preview: true), class: "mt-4 bg-blue-500 rounded-lg py-3 px-5 bg-gray-100 font-medium hover:bg-blue-500"%>
    <div class="inline-block ml-2">
    <%= link_to "Download as PDF", download_post_path(@post), class: "mt-4 bg-blue-500 rounded-lg py-3 px-5 bg-gray-100 font-medium hover:bg-blue-500"%>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this post", @post, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium hover:bg-red-500" %>
    </div>

    
  </div>
</div>
